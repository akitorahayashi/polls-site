# Web Server Configuration
WEB_PORT=8000
HOST_BIND_IP=127.0.0.1

# Django Configuration
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ---------------------------------------------------------------------------
# POSTGRESQL DATABASE SETTINGS
# ---------------------------------------------------------------------------
# These variables are used by the 'db' service in docker-compose.yml
# and to construct the DATABASE_URL below.
# For .env.test, it is recommended to change POSTGRES_DB to 'polls_db_test'.
POSTGRES_DB=polls_db
POSTGRES_USER=polls_user
POSTGRES_PASSWORD=polls_password

# PostgreSQL Database Connection URL for Django
# This URL is constructed from the variables above.
# You should not need to change this line directly.
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}